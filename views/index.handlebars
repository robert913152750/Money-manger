<div class="container">
  <div class="row">
    <div class="col mb-3"></div>
    <div class="col mb-3">
      <h3 class="text-warning display-4">總金額: {{{totall}}}</h1>
    </div>
    <div class="col mb-3"></div>
  </div>

  <ul class="list group">

    {{#each records}}
    <li class="list-group-item">
      <div class="row">
        <div class="col-auto mr-auto">
          <h4 style="display: inline;vertical-align: middle;">{{{this.name}}}</h4>
        </div>
        <div class="col-auto">
          日期{{{this.date}}}
          金額{{{this.amount}}}
          <a class="btn btn-success" href="expense/{{{this._id}}}/edit">修改</a>
          <form action="/expense/{{{this._id}}}/delete?_method=DELETE" method="POST" style="display: inline">
            <button class="btn btn-danger" type="submit">刪除</button>
          </form>
        </div>
      </div>

    </li>
    {{/each}}
    <div class="fixed-bottom m-4">
      <div class="row">
        <div class="col"></div>
        <div class="col">
          <a href="/expense/new" style="color:warning" class="float-right">
            <span style="color:#ffc107;">
              <i class="fas fa-plus-circle fa-4x"></i>
            </span>
          </a>
        </div>
      </div>
    </div>

  </ul>
</div>




</div>